@{
        var db = Database.Open("League_DB");
        var postgameID = Request["Game_ID"];
        var posthomeID = Request["Home_Team_ID"];
        var postawayID = Request["Away_Team_ID"];
        var postsheet = Request["Sheet"];
        var postdate = Request["Game_Date"];
        var posttime = Request["Game_Time"];
        var postgamesubmit = Request["Game_Submit"];
        var postplayoff = Request["Playoff"];
        
        var postsql = "Update Schedule_tbl Set Home_Team_ID=@1, Away_Team_ID=@2 , Sheet=@3, Game_Date=@4, Game_Time=@5, Game_Submit=@6, Playoff=@7 Where Game_ID=@0";
        
        db.Execute(postsql, postgameID, posthomeID, postawayID, postsheet, postdate, posttime, postgamesubmit, postplayoff);    
        
        var sql="Select * from Schedule_tbl where Game_ID = @0";
        var result = db.Query(sql, postgameID);
        Json.Write(result, Response.Output);
}